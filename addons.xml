<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
	
                   <!--// Zivcho Wizard \\-->

<addon id="plugin.program.ZivchoWizard" name="[B][COLOR lime][COLOR lime]Zivcho Wizard[COLOR lime][/COLOR][/B]" version="0.1.1" provider-name="[B][COLOR lime]Zivcho[/COLOR][/B]">.
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Zivcho Wizard</summary>
    <description lang="en">Thanks for using Zivcho Wizard...</description>
    <platform>all</platform>
	<website>https://www.kodi.tv</website>
  </extension>
</addon>

<addon id="repository.zivcho" name="Zivcho Repo" version="1.0.0" provider-name="Zivcho">
	<extension point="xbmc.addon.repository" name="Name you want to appear in Kodi">

			<info compressed="false">https://github.com/ZivchoKodi/Zivcho/blob/main/addons.xml</info>
            <checksum>https://github.com/ZivchoKodi/Zivcho/blob/main/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/ZivchoKodi/Zivcho/blob/main/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en"></summary>
		<description lang="en"></description>
		<genre></genre>
	</extension>
</addon>
	
</addons>

